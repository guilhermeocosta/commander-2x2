---
import { generateSEO } from "../utils/seo";
import "../styles/global.css";
import PostHog from "./PostHog.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import TopBanner from "./TopBanner.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  type?: string;
  keywords?: string;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title,
  description,
  image,
  url,
  type,
  keywords,
  author,
  publishedTime,
  modifiedTime,
}: Props = Astro.props;

const seo = generateSEO({
  title,
  description,
  image,
  url,
  type,
  keywords,
  author,
  publishedTime,
  modifiedTime,
});

const structuredData = {
  "@context": "https://schema.org",
  "@type": type === "article" ? "Article" : "WebSite",
  name: seo.title,
  description: seo.description,
  url: seo.url,
  image: seo.image,
  author: {
    "@type": "Organization",
    name: seo.author,
  },
  publisher: {
    "@type": "Organization",
    name: "Commander 2x2",
    logo: {
      "@type": "ImageObject",
      url: "https://commander2x2.com/favicon.svg",
    },
  },
  ...(publishedTime && { datePublished: publishedTime }),
  ...(modifiedTime && { dateModified: modifiedTime }),
};
---

<!doctype html>
<html lang="pt-BR" data-theme="custom">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={seo.canonical} />

    <!-- Basic SEO -->
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />
    <meta name="keywords" content={seo.keywords} />
    <meta name="author" content={seo.author} />

    <!-- Open Graph -->
    <meta property="og:title" content={seo.openGraph.title} />
    <meta property="og:description" content={seo.openGraph.description} />
    <meta property="og:url" content={seo.openGraph.url} />
    <meta property="og:site_name" content={seo.openGraph.siteName} />
    <meta property="og:locale" content={seo.openGraph.locale} />
    <meta property="og:type" content={seo.openGraph.type} />
    <meta property="og:image" content={seo.openGraph.images[0].url} />
    <meta property="og:image:width" content={seo.openGraph.images[0].width.toString()} />
    <meta property="og:image:height" content={seo.openGraph.images[0].height.toString()} />
    <meta property="og:image:alt" content={seo.openGraph.images[0].alt} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content={seo.twitter.card} />
    <meta name="twitter:title" content={seo.twitter.title} />
    <meta name="twitter:description" content={seo.twitter.description} />
    <meta name="twitter:image" content={seo.twitter.image} />
    <meta name="twitter:image:alt" content={seo.twitter.imageAlt} />
    <meta name="twitter:site" content={seo.twitter.site} />

    <!-- Article specific meta (if applicable) -->
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}

    <!-- Structured Data -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)} />
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <TopBanner
      title="Apoie o Commander 2x2!"
      description="Contribua e receba recompensas"
      link="https://apoia.se/commander2x2"
      linkText="Apoie"
    />

    <PostHog />
    <SpeedInsights />

    <slot />
  </body>
</html>
