---
import { Calendar, MapPin, Trophy, CircleDollarSign } from "@lucide/astro";

export interface Props {
  title: string;
  date: string;
  time: string;
  location: string;
  format: string;
  entryFee: string;
  description?: string;
  className?: string;
}

const {
  title,
  date,
  time,
  location,
  format,
  entryFee,
  description = "",
  className = "",
}: Props = Astro.props;
---

<div class:list={["card bg-base-100 shadow-xl", className]}>
  <div class="card-body">
    <h4 class="card-title sm:my-0">{title}</h4>

    <div class="space-y-2">
      <div class="flex items-center gap-2">
        <Calendar size={16} />
        <span class="text-sm"
          >{new Date(date + "T00:00:00").toLocaleDateString("pt-BR")} Ã s {time}</span
        >
      </div>

      <div class="flex items-center gap-2">
        <MapPin size={16} />
        <span class="text-sm">{location}</span>
      </div>

      <div class="flex items-center gap-2">
        <Trophy size={16} />
        <span class="text-sm">{format}</span>
      </div>

      <div class="flex items-center gap-2">
        <CircleDollarSign size={16} />
        <span class="text-sm font-semibold">{entryFee}</span>
      </div>
    </div>

    {description && <p class="text-sm text-base-content/70 sm:mb-0">{description}</p>}
  </div>
</div>
